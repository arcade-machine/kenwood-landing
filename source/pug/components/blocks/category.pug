- var categoryItems = [{text: 'Кухонные <b>машины</b>', icon: 'machine'},{text: 'Насадки для <b>кухонных машин</b>', icon: 'cap'},{text: 'Вопросы <b>и ответы</b>', icon: 'q&a'},{text: 'Книга <b>рецептов</b>', icon: 'recipe-book'},{text: '<b>Инструкции</b>', icon: 'instructions'}]

mixin category()
    section.category
        .category__wrapper
            h2.category__title
                | Интересно
            ul.category__list
                each category, index in categoryItems
                    li.category__item(class='category__item--' + index)
                        picture.category__image-box
                            source(media='(max-width: 1200px)' srcset=img + category.icon + '.png')
                            img.category__image(src=img + category.icon + '-desktop.png')
                        p.category__text!= category.text
