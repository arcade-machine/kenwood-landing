- var conditions = [{text: 'Выбери <a href="#choose">кухонную машину</a>, положи её в корзину', icon: 'choose'}, {text: 'Добавь <a href="#add">насадки</a>', icon: 'add'}, {text: 'Стоимость пересчитается автоматически', icon: 'cost'}]

mixin conditions()
    section.conditions
        .conditions__container.container
            h2.conditions__title
                | Как получить подарок
            ul.conditions__list
                each condition, index in conditions
                    li.conditions__item(class='conditions__item--' + index)
                        img.conditions__image(src=img + condition.icon + '.png')
                        p.conditions__counter=index + 1
                        p.conditions__text!=condition.text
